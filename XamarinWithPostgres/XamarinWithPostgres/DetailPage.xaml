<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinWithPostgres.DetailPage" Title="Detail List">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Title}" TextColor="Red"
                VerticalOptions="CenterAndExpand"/>
            <Image Source="{Binding Picture}" WidthRequest="80" />
            <Label Text="{Binding Description}" TextColor="Blue" />
            <Label Text="{Binding Price,StringFormat='Rp.{0:N0}'}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>